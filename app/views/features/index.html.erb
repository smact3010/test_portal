<h1>Listing features</h1>
<%= link_to 'New feature', new_feature_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @features.each do |feature| %>
    <tr>
      <td><%= feature.title %></td>
      <td><%= feature.text %></td>
      <td><%= link_to 'Show', feature_path(feature) %></td>
      <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
      <td><%= link_to 'Destroy', feature_path(feature),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>