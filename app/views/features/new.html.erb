<h1>New Feature</h1>

<%= form_for :feature, url: features_path do |f| %>
  
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:
      </h2>
      <ul>
        <% @feature.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', features_path %>